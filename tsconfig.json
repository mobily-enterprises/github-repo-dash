{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2020"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "include": ["docs/**/*.js", "tests/**/*.js", "vitest.config.js"],
  "exclude": ["coverage", "node_modules", "dist"]
}
